    <link href="remote.css" rel="stylesheet">
<script src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
<script>
function fire(x) {
  var xhttp = new XMLHttpRequest();
  xhttp.open("GET", x, false);
  xhttp.send();
}
function loadtemp(){
    $('#temperature').load('temperature.php')
};
$(document).ready(function(){
	loadtemp();
	setInterval(function(){
		loadtemp() // this will run after every 5 seconds
	}, 10000);
});
</script>
  </head>

  <body>
<div class="remote">
<div class="header">Air Temperature:
<div id=temperature>XX.xx</div><sup class="symbol"> Â°C</sup>
</div>
  <table>
    <tr>
      <td>
        <button type="button" class="btn power" onclick="fire('power.php')">
          <i class="fa fa-power-off fa-4x"></i>
        </button>
      </td>
      <td>
        <button type="button" class="btn vol mute" onclick="fire('mute.php')">
          <i class="fa fa-volume-off fa-4x"></i>
        </button>
      </td>
    </tr>
    <tr>
      <td>

      </td>
      <td>
        <button type="button" class="btn vol" onclick="fire('volup.php')">
          <i class="fa fa-volume-up fa-4x"></i>
        </button>
        
      </td>
    </tr>
	<tr>
		<td>
		</td>
		<td>
			<button type="button" class="btn vol" onclick="fire('voldn.php')">
          <i class="fa fa-volume-down fa-4x"></i>
        </button>
		</td>
	</tr>
  </table>
</div>


  </body>
</html>


